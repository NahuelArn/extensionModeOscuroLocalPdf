{
  "manifest_version": 3,
  "name": "Modo Oscuro para PDFs Locales",
  "version": "3.0",
  "description": "Activa modo oscuro (invertido) para PDFs locales.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "file:///*",
    "<all_urls>"
  ]
}
